<Page x:Class="Cactus.Pages.Authorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cactus.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Authorization">

    
        <Grid Background="Wheat">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="2*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="1" Grid.Row="1">
                <TextBlock Text="Логин" FontSize="20px" HorizontalAlignment="Center"/>
                <TextBox  Height="40px" FontSize="20px" x:Name="txtLogin"/>
                <TextBlock Text="Пароль" FontSize="20px" HorizontalAlignment="Center"/>
                <PasswordBox Height="40px" FontSize="20px" x:Name="txtPassword"/>
                <Button Content="Войти" Width="100px" FontSize="16px" Margin="0,20,0,0" x:Name="ButtonLogIn" Click="ButtonLogIn_Click" />
            </StackPanel>
        </Grid>

   
</Page>
